{
  "name": "ez-coder",
  "displayName": "ez-coder",
  "version": "0.0.2",
  "description": "An all-in-one AI assistant for coding",
  "engines": {
    "vscode": "^1.103.0"
  },
  "activationEvents": [
    "onView:ez-coder.chatView",
    "onCommand:ez-coder.start",
    "onCommand:ez-coder.completeCode",
    "onCommand:ez-coder.clearChat"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ez-coder.start",
        "title": "EZCoder: Open Chat"
      },
      {
        "command": "ez-coder.completeCode",
        "title": "EZCoder: Complete My Code"
      },
      {
        "command": "ez-coder.clearChat",
        "title": "EZCoder: Clear Chat"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ez-coder",
          "title": "EZCoder",
          "icon": "resources/ez-coder.svg"
        }
      ]
    },
    "views": {
      "ez-coder": [
        {
          "id": "ez-coder.chatView",
          "name": "AI Chat",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "EZCoder",
      "properties": {
        "ezcoder.apiBase": {
          "type": "string",
          "default": "",
          "description": "Base URL for the Colab API"
        }
      }
    }
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0"
  }
}
