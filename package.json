{
  "name": "ez-coder",
  "displayName": "EZ-Coder",
  "description": "An all-in-one assistant with an AI agent, code visualizer, and study roadmaps.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Education"
  ],
  "activationEvents": [
    "onView:ez-coder.chatView",
    "onCommand:ez-coder.completeCode"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ez-coder.completeCode",
        "title": "EZ-Coder: Complete My Code"
      },
      {
        "command": "ez-coder.verifyApiKey",
        "title": "EZ-Coder: Verify Hugging Face API Key"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ez-coder",
          "title": "EZ-Coder",
          "icon": "resources/ez-coder.svg"
        }
      ]
    },
    "views": {
      "ez-coder": [
        {
          "id": "ez-coder.chatView",
          "name": "AI Chat",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "EZ-Coder",
      "properties": {
        "ez-coder.huggingFaceApiKey": {
          "type": "string",
          "default": "",
          "description": "Your personal Hugging Face API Key for your fine-tuned model."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "node-fetch": "^2.7.0"
  }
}